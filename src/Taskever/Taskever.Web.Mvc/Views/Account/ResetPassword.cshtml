@using Recaptcha.Web
@using Recaptcha.Web.Mvc
@model Taskever.Web.Mvc.Models.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "Taskever - A free social network for task management!";
}
<div id="wrap">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Taskever</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <section class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">Change your password!</h1>
                    </div>
                    <div class="panel-body" id="ResetPasswordFormPanelBody">
                        <form id="ResetPasswordForm" role="form" action="@Url.Action("ResetPassword")" method="POST" style="max-width: 360px">
                            <input type="hidden" name="UserId" class="form-control" id="ResetPasswordUserId" value="@Model.UserId">
                            <input type="hidden" name="PasswordResetCode" class="form-control" id="ResetPasswordResetCode" value="@Model.ResetCode">
                            <div class="form-group">
                                <input type="password" maxlength="30" name="Password" class="form-control" id="ResetPassword" placeholder="Password" required>
                            </div>
                            <div class="form-group">
                                <input type="password" maxlength="30" name="PasswordRepeat" class="form-control" id="ResetPasswordRepeat" placeholder="Password (repeat)" required>
                            </div>
                            <div class="form-group">
                                @Html.Recaptcha(theme: RecaptchaTheme.White)
                            </div>
                            <button type="submit" class="btn btn-default">Change password</button>
                        </form>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

@Html.Partial("_Footer")

@section scripts
{
    <script src="~/Scripts/require.js" data-main="/ViewResources/main.js"></script>
    <script>
        require(['/ViewResources/Account/ResetPassword.js']);
    </script>
}
