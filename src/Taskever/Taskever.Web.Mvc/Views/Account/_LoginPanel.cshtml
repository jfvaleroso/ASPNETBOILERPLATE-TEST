<div class="panel panel-default" id="LoginFormPanelBody">
    <div class="panel-heading">
        <h3 class="panel-title">@L("Login")</h3>
    </div>
    <div class="panel-body">
        @if (!string.IsNullOrWhiteSpace(ViewBag.LoginMessage))
        {
            <p class="text-success">@ViewBag.LoginMessage</p>            
        }
        <form id="LoginForm" role="form" action="@Url.Action("Login")" method="POST">
            <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" id="LoginReturnUrl" />
            <div class="form-group">
                <input type="email" maxlength="100" name="EmailAddress" class="form-control" id="LoginEmailAddress" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <input type="password" maxlength="30" name="Password" class="form-control" id="LoginPassword" placeholder="Password" required>
            </div>
@*            <div class="checkbox">
                <label>
                    <input type="checkbox" name="RememberMe" value="true">
                    Remember me
                </label>
            </div>*@
            <button type="submit" class="btn btn-primary">Login</button>
            <a id="ForgotPasswordLink" href="#" class="pull-right">Forgot your password?</a>
        </form>
    </div>
</div>

<div class="modal fade" id="PasswordResetLinkModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <form id="PasswordResetForm" role="form" action="@Url.Action("SendPasswordResetLink")" method="POST">
        <div class="modal-dialog" style="width: 320px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Forgot your password</h4>
                </div>
                <div class="modal-body">
                    <p>Enter your email address below to send a password reset link to your email.</p>
                    <div class="form-group">
                        <input type="email" maxlength="100" name="EmailAddress" class="form-control" id="PasswordResetEmailAddress" placeholder="Enter email" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="PasswordResetLinkModalSubmitButton" type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
