<section>
    <form role="form">
        <div class="messageBox" style="max-width: 425px">
            <div class="modal-header">
                <h3>Add new friend</h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p data-bind="text: message"></p>
                </div>
                <div class="form-group">
                    <label for="NewFriendEmailAddress">Email address</label>
                    <input type="email" class="form-control" id="NewFriendEmailAddress" placeholder="email address" data-bind="value: emailAddress" required="">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bind="click: cancel">Cancel</button>
                <button type="submit" class="btn btn-primary">Send request</button>
            </div>
        </div>
    </form>
</section>
